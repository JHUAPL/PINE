{
    "extends": "../tslint.json",
    "rules": {
        "directive-selector": [
            true,
            "attribute",
            "app",
            "camelCase"
        ],
        "component-selector": [
            true,
            "element",
            "app",
            "kebab-case"
        ],
        "quotemark": [false],
        "whitespace": [true, "check-decl", "check-operator", "check-module", "check-separator",
                             "check-rest-spread", "check-type", "check-type-operator",
                             "check-preblock"]
    }
}
